{
    "manifest_version": 3,
    "name": "irani-bash",
    "version": "0.1.0",
    "description": "بهبود تجربه کاربری سایت‌ها برای کاربران ایرانی (راست‌چین‌سازی، فونت مناسب و ...)",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "*://chat.openai.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
      }
    },
    "icons": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "modules/*/*.css",
          "modules/*/*.js",
          "assets/fonts/*.woff2"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  